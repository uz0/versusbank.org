{
  "name": "versusbank-web-game",
  "version": "1.0.0",
  "description": "16-bit retro web game for VersusBank domain",
  "private": true,
  "type": "module",
  "main": "src/ts/main.ts",
  "scripts": {
    "dev": "rollup --config rollup.dev.config.js --watch",
    "build": "npm run build:tsc && node scripts/build.js",
    "build:tsc": "tsc --noEmit",
    "build:check": "tsc --noEmit && npm run build",
    "serve": "node scripts/dev-server.js",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:e2e": "playwright test tests/e2e/",
    "test:performance": "playwright test tests/performance/",
    "type-check": "tsc --noEmit --strict",
    "lint": "eslint src/ts/ tests/ --ext .ts",
    "lint:fix": "eslint src/ts/ tests/ --ext .ts --fix",
    "validate": "npm run type-check && npm run build && npm run test && npm run lint",
    "clean": "rm -rf docs/ src/js/ src/typings/ node_modules/.cache/",
    "deploy:preview": "npm run build && npm run serve"
  },
  "keywords": [
    "game",
    "canvas",
    "16-bit",
    "retro",
    "pwa",
    "web-game",
    "javascript",
    "versusbank"
  ],
  "author": "VersusBank Team",
  "license": "Unlicense",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "marked": "^9.1.0",
    "playwright": "^1.40.0",
    "rollup": "^4.6.0",
    "rollup-plugin-serve": "^2.0.2",
    "tslib": "^2.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead",
    "not IE 11"
  ],
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.3.1"
  }
}
